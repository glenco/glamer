get_filename_component(GLAMER_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

set(ENABLE_FITS @ENABLE_FITS@ CACHE BOOL "Enable FITS support.")
set(ENABLE_FFTW @ENABLE_FFTW@ CACHE BOOL "Enable functions that require FFTW.")
set(ENABLE_GSL @ENABLE_GSL@ CACHE BOOL "Enable functions that require GLS.")
set(ENABLE_HEALPIX @ENABLE_HEALPIXS@ CACHE BOOL "Enable HealPix support.")
set(ENABLE_HDF5 @ENABLE_HDF5@ CACHE BOOL "Enable HDF5 support.")
set(ENABLE_CERF @ENABLE_CERF@ CACHE BOOL "Enable CERF support.")

set(GLAMER_MODULE_PATH "@GLAMER_MODULE_PATH@")
set(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} "${GLAMER_MODULE_PATH}")
include(GLAMER)

set(GLAMER_INCLUDE_DIRS @GLAMER_INCLUDE_DIRS@)
set(GLAMER_DEFINITIONS @GLAMER_DEFINITIONS@)

include("${GLAMER_CMAKE_DIR}/GLAMERTargets.cmake")

set(GLAMER_LIBRARIES @GLAMER_LIBRARIES@)